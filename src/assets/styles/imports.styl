@import "../../../node_modules/animate.css/animate.css";
@import "../../../node_modules/hover.css/css/hover.css";
@import "../../../node_modules/c3/c3.css";

.c3 .c3-axis-x path,
.c3 .c3-axis-x line,
.c3 .c3-axis-y path,
.c3 .c3-axis-y line {
    stroke: rgba(80, 80, 80, 1);
}

.c3 .c3-axis-x g,
.c3 .c3-axis-y g,
.c3 .c3-legend-item-data text,
.c3 .c3-axis-y-label,
.c3 .c3-axis-x-label,
.c3 .c3-legend-item {
    fill: rgba(80, 80, 80, 1);
}

/*when displaying the data on the chart */
.c3 text.c3-text {
    fill: rgba(80, 80, 80, 1)!important;
    stroke: rgba(80, 80, 80, 1)!important;
    stroke-opacity: 0.3!important;
}

/* for the tooltip text color */
.c3 .c3-tooltip-container {
    color:rgba(80, 80, 80, 1);
}